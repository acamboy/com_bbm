<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.bbm.ui.SquaredObservingImageView android:id="@id/search_results_profile_photo" android:layout_width="@dimen/channel_search_result_avatar_size" android:layout_height="@dimen/channel_search_result_avatar_size" android:src="@drawable/default_channel_large" android:scaleType="centerCrop" />
    <TextView android:textSize="@dimen/search_results_banner_font_size" android:textColor="@color/white" android:gravity="center" android:id="@id/search_results_new" android:visibility="invisible" android:layout_width="@dimen/channel_search_result_avatar_size" android:layout_height="@dimen/search_results_banner_height" android:layout_alignBottom="@id/search_results_profile_photo" android:layout_centerVertical="true" android:alpha="0.75" />
    <LinearLayout android:orientation="horizontal" android:id="@id/search_result_badge_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/channel_search_result_text_top_margin" android:layout_toLeftOf="@id/search_results_add_channel_photo" android:layout_toRightOf="@id/search_results_profile_photo" android:layout_alignWithParentIfMissing="true">
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.bbm.ui.InlineImageTextView android:textSize="@dimen/channel_search_result_title_text" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="end" android:layout_gravity="left" android:id="@id/search_results_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/channel_search_result_text_left_margin" android:maxLines="1" android:singleLine="true" />
            <LinearLayout android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:id="@id/search_results_verified_badge" android:visibility="gone" android:layout_width="@dimen/channel_search_result_badge_icons_size" android:layout_height="@dimen/channel_search_result_badge_icons_size" android:src="@drawable/ic_official" android:scaleType="centerCrop" android:contentDescription="@string/blank" />
                <ImageView android:layout_gravity="center_vertical" android:id="@id/search_results_favorite_badge" android:visibility="gone" android:layout_width="@dimen/channel_search_result_badge_icons_size" android:layout_height="@dimen/channel_search_result_badge_icons_size" android:src="@drawable/search_favorite" android:scaleType="centerCrop" android:contentDescription="@string/blank" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <com.bbm.ui.InlineImageTextView android:textSize="@dimen/channel_search_result_description_text" android:textColor="@color/channel_search_subtitle_color" android:ellipsize="end" android:id="@id/search_results_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/channel_search_result_text_left_margin" android:layout_marginTop="@dimen/channel_search_result_text_seperator_margin" android:maxLines="1" android:layout_toLeftOf="@id/search_results_add_channel_photo" android:layout_toRightOf="@id/search_results_profile_photo" android:layout_below="@id/search_result_badge_layout" android:layout_alignWithParentIfMissing="true" />
    <ImageView android:id="@id/search_results_add_channel_photo" android:visibility="visible" android:layout_width="@dimen/channel_search_result_avatar_size" android:layout_height="@dimen/channel_search_result_avatar_size" android:layout_marginLeft="@dimen/channel_search_join_channel_left_margin" android:layout_marginRight="@dimen/channel_search_join_channel_right_margin" android:src="@drawable/ic_addchannels" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:contentDescription="@string/blank" />
</RelativeLayout>
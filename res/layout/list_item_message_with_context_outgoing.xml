    <TextView android:textAppearance="@style/ConversationDate" android:id="@id/message_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@id/message_sender" android:layout_alignParentRight="true" android:textIsSelectable="false" />

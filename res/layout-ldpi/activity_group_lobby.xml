<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="@dimen/lobby_padding" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/footer_action_bar">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="0.0px" android:baselineAligned="false" android:layout_weight="1.0">
            <LinearLayout android:orientation="vertical" android:id="@id/groupChatArea" android:background="@color/lobby_grey" android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_weight="1.0">
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
                    <com.bbm.ui.ObservingImageView android:id="@id/groupChatPic" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/group_lobby_chat_tile_default_pic" android:scaleType="centerCrop" android:contentDescription="@string/blank" />
                    <ImageView android:id="@id/group_chat_splat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_splat_margin_top" android:layout_marginRight="@dimen/lobby_splat_margin_right" android:src="@drawable/ic_group_badge" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@string/blank" />
                </RelativeLayout>
                <FrameLayout android:id="@id/groupConvoFrame" android:layout_width="fill_parent" android:layout_height="@dimen/lobby_chat_bubble_overlap_pos" android:layout_marginTop="@dimen/lobby_chat_bubble_overlap_neg" android:layout_weight="1.0">
                    <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/group_lobby_chat_tile_bubble" android:scaleType="fitXY" android:contentDescription="@string/blank" />
                    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <com.bbm.ui.InlineImageTextView android:textSize="@dimen/lobby_chats_name_text_size" android:textStyle="bold" android:textColor="@color/black" android:id="@id/groupChatLastMessageName" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_chat_last_message_name_margin_left" android:layout_marginTop="@dimen/lobby_chat_last_message_name_margin_top" android:layout_marginRight="@dimen/lobby_chat_last_message_name_margin_right" android:singleLine="true" />
                        <com.bbm.ui.InlineImageTextView android:textSize="@dimen/lobby_chats_message_text_size" android:textColor="@color/black" android:gravity="left|center" android:layout_gravity="left|center" android:id="@id/groupChatLastMessage" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_chat_last_message_margin_left" android:layout_marginRight="@dimen/lobby_chat_last_message_margin_right" android:text="@string/no_current_chat" android:maxLines="3" android:layout_below="@id/groupChatLastMessageName" />
                    </RelativeLayout>
                </FrameLayout>
                <TextView android:textSize="@dimen/lobby_caption_font_size" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/groupChatCaption" android:background="@color/black" android:paddingTop="@dimen/lobby_caption_top_padding" android:paddingBottom="@dimen/lobby_caption_bottom_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/group_lobby_chats" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/groupPictureArea" android:background="@color/lobby_grey" android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/lobby_spacing" android:layout_weight="1.0">
                <RelativeLayout android:id="@id/groupPictureFrame" android:background="@drawable/group_lobby_pictures_tile_background2" android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_weight="1.0">
                    <ImageView android:id="@id/groupPicture" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" android:contentDescription="@string/blank" />
                    <ImageView android:id="@id/groupPictureAdd" android:layout_width="@dimen/lobby_picture_add_width" android:layout_height="@dimen/lobby_picture_add_height" android:src="@drawable/group_lobby_group_tile_plus" android:layout_centerInParent="true" android:contentDescription="@string/blank" />
                    <TextView android:textSize="@dimen/lobby_overlay_font_size" android:textColor="@color/lobby_overlay_text_color" android:gravity="center_horizontal" android:id="@id/groupPictureText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_add_plus_margin" android:text="@string/blank" android:layout_below="@id/groupPictureAdd" />
                    <ImageView android:id="@id/group_picture_splat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_splat_margin_top" android:layout_marginRight="@dimen/lobby_splat_margin_right" android:src="@drawable/ic_group_badge" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@string/blank" />
                </RelativeLayout>
                <TextView android:textSize="@dimen/lobby_caption_font_size" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/groupPictureCaption" android:background="@color/black" android:paddingTop="@dimen/lobby_caption_top_padding" android:paddingBottom="@dimen/lobby_caption_bottom_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/group_lobby_pictures" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="0.0px" android:baselineAligned="false" android:layout_weight="1.0">
            <LinearLayout android:orientation="vertical" android:id="@id/groupListArea" android:background="@color/lobby_grey" android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_marginTop="@dimen/lobby_spacing" android:layout_weight="1.0">
                <RelativeLayout android:id="@id/groupListFrame" android:background="@drawable/group_lobby_lists_header2" android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_weight="1.0">
                    <com.bbm.ui.InlineImageTextView android:textSize="@dimen/lobby_list_event_date_header_text_size" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="marquee" android:gravity="center" android:id="@id/groupListHeader" android:background="@drawable/group_lobby_lists_header2" android:layout_width="fill_parent" android:layout_height="@dimen/lobby_list_header_height" android:singleLine="true" android:layout_alignParentTop="true" />
                    <ImageView android:id="@id/groupListAdd" android:layout_width="@dimen/lobby_plus_tile" android:layout_height="@dimen/lobby_plus_tile" android:layout_marginTop="@dimen/lobby_list_event_ldpi_add_header_margin_top" android:src="@drawable/group_lobby_group_tile_plus" android:layout_below="@id/groupListHeader" android:layout_centerHorizontal="true" android:contentDescription="@string/blank" />
                    <TextView android:textSize="@dimen/lobby_overlay_font_size" android:textColor="@color/lobby_overlay_text_color" android:gravity="center_horizontal" android:id="@id/groupListText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_add_plus_margin" android:text="@string/blank" android:layout_below="@id/groupListAdd" />
                    <ImageView android:id="@id/group_list_splat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_splat_margin_top" android:layout_marginRight="@dimen/lobby_splat_margin_right" android:src="@drawable/ic_group_badge" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@string/blank" />
                    <RelativeLayout android:id="@id/groupListDetailsContainer" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/groupListHeader">
                        <CheckBox android:id="@id/groupListItemCheck" android:background="@drawable/selector_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_list_checkbox_margin_left" android:layout_marginTop="@dimen/lobby_list_checkbox_margin_top" android:layout_marginRight="@dimen/lobby_list_checkbox_margin_right" android:button="@null" android:layout_alignParentLeft="true" />
                        <com.bbm.ui.InlineImageTextView android:textSize="@dimen/fontSizeSmall" android:textColor="@color/black" android:ellipsize="marquee" android:id="@id/groupListItem" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="@dimen/lobby_list_checkbox_margin_left" android:text="@string/group_lobby_add" android:layout_toRightOf="@id/groupListItemCheck" android:layout_above="@id/groupListDueDate" android:layout_alignTop="@id/groupListItemCheck" android:layout_alignParentRight="true" />
                        <TextView android:textSize="@dimen/fontSizeXSmall" android:textColor="@color/black" android:id="@id/groupListDueDate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_list_checkbox_margin_left" android:layout_marginRight="@dimen/lobby_list_duedate_margin" android:layout_marginBottom="@dimen/lobby_list_duedate_margin" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </RelativeLayout>
                <TextView android:textSize="@dimen/lobby_caption_font_size" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/groupListCaption" android:background="@color/black" android:paddingTop="@dimen/lobby_caption_top_padding" android:paddingBottom="@dimen/lobby_caption_bottom_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/group_lobby_lists" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/groupEventsArea" android:background="@color/lobby_grey" android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/lobby_spacing" android:layout_marginTop="@dimen/lobby_spacing" android:layout_weight="1.0">
                <RelativeLayout android:id="@id/groupImgFrame" android:background="@drawable/group_lobby_events_background" android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_weight="1.0">
                    <TextView android:textSize="@dimen/lobby_list_event_date_header_text_size" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@id/groupEventsDateHeader" android:background="@drawable/group_lobby_events_header2" android:layout_width="fill_parent" android:layout_height="@dimen/lobby_list_header_height" />
                    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/group_lobby_events_notepad_holes" android:contentDescription="@string/blank" />
                    <ImageView android:layout_gravity="center" android:id="@id/groupEventsAdd" android:layout_width="@dimen/lobby_event_add_width" android:layout_height="@dimen/lobby_event_add_height" android:layout_marginTop="@dimen/lobby_list_event_ldpi_add_header_margin_top" android:src="@drawable/group_lobby_group_tile_plus" android:layout_below="@id/groupEventsDateHeader" android:layout_centerHorizontal="true" android:contentDescription="@string/blank" />
                    <TextView android:textSize="@dimen/lobby_overlay_font_size" android:textColor="@color/lobby_overlay_text_color" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@id/groupEventsText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_add_plus_margin" android:text="@string/blank" />
                    <com.bbm.ui.InlineImageTextView android:textSize="@dimen/lobby_event_subject_text_size" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="marquee" android:id="@id/groupEventsSubject" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_event_subject_margin_left" android:layout_marginTop="@dimen/lobby_event_subject_vertical_margin" android:layout_marginRight="@dimen/lobby_event_subject_margin_right" android:layout_marginBottom="@dimen/lobby_event_subject_vertical_margin" android:singleLine="true" android:layout_below="@id/groupEventsDateHeader" />
                    <TextView android:textSize="@dimen/lobby_event_date_start_finish_text_size" android:textColor="@color/black" android:ellipsize="marquee" android:id="@id/groupEventsDateStartFinish" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_event_date_start_finish_margin_left" android:layout_marginRight="@dimen/lobby_event_date_start_finish_margin_right" android:singleLine="true" android:layout_below="@id/groupEventsSubject" />
                    <com.bbm.ui.InlineImageTextView android:textSize="@dimen/lobby_event_location_text_size" android:textColor="@color/black" android:id="@id/groupEventsLocation" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lobby_event_location_margin_left" android:layout_marginTop="@dimen/lobby_event_location_margin_top" android:layout_marginRight="@dimen/lobby_event_location_margin_right" android:maxLines="4" android:layout_below="@id/groupEventsDateStartFinish" />
                    <ImageView android:id="@id/group_event_splat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/lobby_splat_margin_top" android:layout_marginRight="@dimen/lobby_splat_margin_right" android:src="@drawable/ic_group_badge" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@string/blank" />
                </RelativeLayout>
                <TextView android:textSize="@dimen/lobby_caption_font_size" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/groupEventsCaption" android:background="@color/black" android:paddingTop="@dimen/lobby_caption_top_padding" android:paddingBottom="@dimen/lobby_caption_bottom_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/group_lobby_events" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_merge_footer_actionbar_dropshadow" />
</RelativeLayout>